extends layout

block content
  section.position-relative.py-4.py-xl-5
  .container
    .row.mb-5
      .col-md-8.col-xl-6.text-center.mx-auto
        h2 Log In
    .row.d-flex.justify-content-center
      .col-md-6.col-xl-4
        .card.mb-5
          .card-body.d-flex.flex-column.align-items-center
            .bs-icon-xl.bs-icon-circle.bs-icon-primary.my-4.bs-icon
              svg.bi.bi-person(xmlns='http://www.w3.org/2000/svg' width='1em' height='1em' fill='currentColor' viewbox='0 0 16 16')
                path(d='M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664z')
            form.text-center(method='post' novalidate)
              .mb-3
                input.form-control(type='email' name='email' placeholder='Email' required)
                .invalid-feedback Please enter a valid email address.
              .mb-3
                input.form-control(type='password' name='password' placeholder='Password' required minlength='6')
                .invalid-feedback Please enter your password (minimum 6 characters).
              .mb-3
                button.btn.btn-primary.w-100.d-block(type='submit') Login
              a.text-primary.text-decoration-underline(href='/register') New Here? Create an Account
