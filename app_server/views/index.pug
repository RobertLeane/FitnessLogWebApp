extends layout

block content
  .container.py-4
    h1.text-center.mb-1
      strong Hi Robert...
    p.text-center.text-muted.mb-4 Track your workouts and progress
    .row.g-4
      .col-12.col-lg-6.order-0.order-lg-1
        h3.h4.text-center.mb-1
          strong This Week Summary
        p.text-center.text-muted.mb-4 Your fitness progress this week
        .d-grid.gap-3
          .card.border-dark-subtle.shadow-sm
            .card-body.py-3
              .d-flex.justify-content-between.align-items-center
                h4.mb-0 &#x1F3C6; Sessions
                h4.mb-0.text-end= summary.sessions
          .card.border-dark-subtle.shadow-sm
            .card-body.py-3
              .d-flex.justify-content-between.align-items-center
                h4.mb-0 &#x23F1;&#xFE0F; Total Time
                h4.mb-0.text-end= summary.totalTime
          .card.border-dark-subtle.shadow-sm
            .card-body.py-3
              .d-flex.justify-content-between.align-items-center
                h4.mb-0 &#x26A1; Average Duration
                h4.mb-0.text-end= summary.averageDuration
      .col-12.col-lg-6.order-1.order-lg-0
        h2.h4.mb-3
          strong Your Workouts
        if workouts && workouts.length
          each workout in workouts
            .card.border-dark-subtle.shadow-sm.mb-3
              .card-body
                .d-flex.justify-content-between.align-items-center
                  h4.mb-0= workout.title
                  p.mb-0.text-nowrap= workout.date
                .d-flex.flex-wrap.gap-3.mt-2
                  h6.text-muted.mb-0 
                    | &#x23F1;&#xFE0F; #{workout.duration}
                  span.badge.bg-warning.text-dark= workout.intensity
                p.card-text.mt-2 
                  | &#x1F4DD; #{workout.description}
        else
          .alert.alert-info.text-center No workouts found.
          