extends layout

block content
  .container.py-4
    .row.justify-content-center
      .col-md-8.col-lg-6
        .card.border-dark-subtle.shadow-sm
          .card-body.p-4
            h1.text-center.mb-4
              strong= aboutData.title
            
            p.lead.text-center.mb-4= aboutData.tagline
            
            h3.h5.mb-3
              strong What is #{aboutData.appName}?
            p.mb-4= aboutData.descriptions
            
            h3.h5.mb-3
              strong Key Features
            ul.list-unstyled.mb-4
              each feature in aboutData.features
                li.mb-2
                  i.bi.bi-check-circle-fill.text-success.me-2
                  | #{feature}
              
            
            h3.h5.mb-3
              strong Get Started
            p.mb-4= aboutData.welcomeMessage
            
            .text-center
              a.btn.btn-primary.btn-lg.me-3(href='/register') Get Started
              a.btn.btn-outline-primary.btn-lg(href='/') View Dashboard